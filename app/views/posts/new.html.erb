                    <%= image_tag 'uso.png', size: "60x90", class: 'mx-2' %>
                    <%= image_tag 'usoaka.png', size: "60x90", class: 'mx-2' %>
                    <%= image_tag 'roso.png', size: "60x90", class: 'mx-2' %>
                    <%= image_tag 'tiso.png', size: "60x90", class: 'mx-2' %>
                    <%= image_tag 'paso.png', size: "60x90", class: 'mx-2' %>
