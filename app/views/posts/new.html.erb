        </div>
    </div>


    <%= render 'layouts/footer' %>

    <script>
        document.addEventListener("turbo:load", function() {
            function addSelectedImage(imageSrc) {
                const imageArea = document.getElementById('selected-images');
                const existingImages = imageArea.getElementsByTagName('img').length;

                // 既に4枚の画像がある場合は新しい画像を追加しない
                if (existingImages >= 4) {
                    alert('最大4枚の画像を選択できます。');
                    return;
                }

                const img = document.createElement('img');
                img.src = imageSrc;
                img.style.width = '1.5cm';  // 横幅を2cmに設定
                img.style.height = '2cm';  // 縦幅を3cmに設定
                img.classList.add('mx-2', 'my-2');  // 余白を追加
                imageArea.appendChild(img);  // 新しい画像を表示エリアに追加
            }

            document.querySelectorAll('.modal img').forEach(function(img) {
                img.addEventListener('click', function() {
                    addSelectedImage(this.src);  // クリックされた画像を表示エリアに追加
                    document.getElementById('modal_1').checked = false;  // モーダルを閉じる
                });
            });
        });


    </script>

