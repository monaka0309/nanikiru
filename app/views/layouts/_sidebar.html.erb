<div class="drawer">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />

  <div class="drawer-content flex items-center justify-between">
    <!-- FontAwesome ハンバーガーアイコン -->
    <label for="my-drawer" class="drawer-button">
      <i class="fa-solid fa-bars fa-2x m-3" style="color: gray;"></i>
    </label>
  </div>

  <div class="drawer-side">
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu p-4 w-70 font-mono min-h-full bg-base-200 text-base-content">
      <% if current_user %>
        <div class="mt-5">
          <i class="fa-solid fa-user fa-xl"></i>
          <%= current_user.name %><br><br>
          <%= image_tag current_user.image.url, class: 'rounded-full mb-3', size: '100x100' %>
        </dev>
        <li><%= link_to '  ログアウト', logout_path, method: :delete, data: { turbo_method: :delete }, class: "text-blue-500 block my-3 fa-solid fa-right-to-bracket fa-mg" %></li>
      <% else %>
        <li class="mt-2"><%= link_to '  ログイン', login_path, class: "text-blue-500 fa-solid fa-right-to-bracket fa-mg" %></li>
        <li class="my-2"><%= link_to '  ユーザー登録', new_user_path, class: "text-blue-500 fa-solid fa-user fa-mg" %></li>
      <% end %>

      <li class="mb-5"><a href="static_pages/about"><i class="fa-solid fa-compass fa-lg"></i>アプリについて</a></li>
      <li class="mb-5"><a href="/posts/new"><i class="fa-solid fa-file fa-lg"></i>新規投稿</a></li>
      <li class="mb-5"><a href="/posts"><i class="fa-solid fa-house fa-lg"></i>投稿一覧</a></li>
      <%# <li class="mb-5"><a href="#notifications"><i class="fa-solid fa-bell fa-lg"></i>通知</a></li> %>
      <li class="mb-5"><a href="/profile"><i class="fa-solid fa-circle-user fa-lg"></i></i>マイページ</a></li>
      <li class="mb-5"><a href="static_pages/contact"><i class="fa-solid fa-envelope fa-lg"></i>問い合わせページ</a></li>
      <li class="mb-5"><a href="static_pages/privacy_policy"><i class="fa-solid fa-users fa-lg"></i>プライバシーポリシーページ</a></li>
      <li class="mb-5"><a href="static_pages/terms_of_service"><i class="fa-regular fa-address-book fa-lg"></i>利用規約ページ</a></li>
    </ul>
  </div>
</div>

