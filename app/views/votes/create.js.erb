
<% if @status == :created %>
  <!-- 投票が作成された場合、票数を増やします。-->
  const votesCountElement = document.querySelector("#votes-count-for-<%= params[:choice].parameterize %>");
  votesCountElement.textContent = parseInt(votesCountElement.textContent) + 1 + " 票";
<% elsif @status == :destroyed %>
  <!--投票が削除された場合、票数を減らします。-->
  const votesCountElement = document.querySelector("#votes-count-for-<%= params[:choice].parameterize %>");
  votesCountElement.textContent = parseInt(votesCountElement.textContent) - 1 + " 票";
<% end %>
